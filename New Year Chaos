#include <stdio.h>

void minimumBribes(int q[], int n) {
    int bribes = 0;

    // Check if anyone has moved more than 2 positions forward
    for (int i = 0; i < n; i++) {
        if (q[i] - (i + 1) > 2) {
            printf("Too chaotic\n");
            return;
        }
    }

    // Count the number of bribes
    for (int i = 0; i < n; i++) {
        // Only check positions from max(0, q[i] - 2) to i-1
        int start = q[i] - 2 > 0 ? q[i] - 2 : 0;
        for (int j = start; j < i; j++) {
            if (q[j] > q[i]) {
                bribes++;
            }
        }
    }

    printf("%d\n", bribes);
}

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int n;
        scanf("%d", &n);
        int q[n];
        for (int i = 0; i < n; i++) {
            scanf("%d", &q[i]);
        }
        minimumBribes(q, n);
    }

    return 0;
}
