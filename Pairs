#include <stdio.h>
#include <stdlib.h>

// Comparison function for qsort
int compare(const void *a, const void *b) {
    return (*(int *)a - *(int *)b);
}

int pairs(int arr[], int n, int k) {
    int count = 0;
    int i = 0, j = 1;

    // Sort the array
    qsort(arr, n, sizeof(int), compare);

    // Two-pointer approach
    while (i < n && j < n) {
        int diff = arr[j] - arr[i];

        if (diff == k) {
            count++;
            i++;
            j++;
        } else if (diff < k) {
            j++;
        } else {
            i++;
        }
    }
    return count;
}

int main() {
    int n, k;
    scanf("%d %d", &n, &k);

    int arr[n];
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    int result = pairs(arr, n, k);
    printf("%d\n", result);

    return 0;
}
